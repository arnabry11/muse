<%= link_to "Add New Inspiration", new_post_path%><br><br><br>

<% @posts.each do |post|%>
  <%= link_to  (image_tag post.image.url(:small)), post %>
  <h2><%=link_to post.title, post%></h2>
  <p><%= pluralize(post.comments.count, "Comment")%></p>
  <p><%= pluralize(post.get_upvotes.size, "like") %> </p>
  <br>
<% end %>